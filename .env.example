# SafeBuddyGuardian Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/safebuddy

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
# Firebase project credentials (Server-side)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key-here
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@appspot.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Firebase client configuration (Frontend - exposed, use public values only)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=1:your-app-id:web:xxxxx

# ==========================================
# TWILIO SMS CONFIGURATION
# ==========================================
# Twilio account credentials for sending SMS alerts
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# SESSION & SECURITY
# ==========================================
# Secret key for session management
SESSION_SECRET=your-random-secure-session-secret-here

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Server port
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# ==========================================
# OPTIONAL CONFIGURATIONS
# ==========================================
# Email service (if needed in future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Log level (debug, info, warn, error)
LOG_LEVEL=info
